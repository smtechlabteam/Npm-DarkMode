{
  "manifest_version": 3,
  "name": "NPM Darkmode",
  "version": "1.0",
  "description": "A dark theme for Nginx Proxy Manager.",
  "icons":{
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/", "*://*/*"],
      "js": ["content.js"],
      "css": ["dark-mode.css"],
      "run_at": "document_end"
    }
  ]
}
